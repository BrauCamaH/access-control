{
  "name": "vn-access-control",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Braulio Camarena <braulio.camarenah@gmail.com>",
  "description": "Control de acceso Villa Napoli",
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^2.0.0",
    "firebase": "^8.6.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.9.0",
    "react-scripts": "4.0.3",
    "serialport": "^9.2.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start-react": "BROWSER=none react-scripts start",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
    "dev": "concurrently \"yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\"",
    "postinstall": "electron-builder install-app-deps",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist:raspian": "yarn build && rm -rf dist && USE_SYSTEM_FPM=true electron-builder build --linux deb --armv7l"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "nodemon": "^2.0.9",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.villanapoli.access-contro",
    "productName": "Vn Access Control",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
